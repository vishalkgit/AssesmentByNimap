@model AssesmentByNimap.Models.Product

<h3>Update Product</h3>
<div class="col-md-4">
    <form asp-action="Edit" >
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProductId" class="Control-label"></label>
                <input asp-for="ProductId" class="form-control" readonly />
            </div>
            <div class="form-group mb-3">
                <label asp-for="ProductName" class="Control-label"></label>
                <input asp-for="ProductName" class="form-control" readonly />
            </div>
        <div class="form-group mb-3">
            <label asp-for="CategoryId" class="Control-label"></label>
            <select asp-for="CategoryId" class="form-control" asp-items="@(new SelectList(ViewBag.Ctegories,"CategoryId","CategoryName"))"></select>
          </div>
        <div class="form-group">
            <input type="submit" value="Update Product" class="btn btn-primary p-3" />
        </div>

    </form>

</div>
